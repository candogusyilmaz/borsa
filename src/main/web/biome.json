{
  "$schema": "https://biomejs.dev/schemas/2.0.4/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "formatter": {
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 140,
    "attributePosition": "auto",
    "formatWithErrors": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "none",
      "bracketSameLine": true
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/routeTree.gen.ts",
      "**/!borsa.json",
      "!**/*.css"
    ]
  }
}
